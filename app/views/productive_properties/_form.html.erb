<%
  contact_select_options = BusinessContact.all.map { |contact| [contact.name, contact.id] }
  messure_unit_select_options = [['Centimetros', :cm], ['Metros', :m]]
%>
<%= form_with(model: productive_property) do |form| %>
  <% if productive_property.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(productive_property.errors.count, "error") %> prohibited this productive_property from being saved:</h2>

      <ul>
        <% productive_property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.select :business_contact_id, contact_select_options %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :area, style: "display: block" %>
    <%= form.number_field :area %>
  </div>

  <div>
    <%= form.label :space_between_rows, style: "display: block" %>
    <%= form.number_field :space_between_rows %>
  </div>

  <div>
    <%= form.label :space_between_rows_unit, style: "display: block" %>
    <%= form.select :space_between_rows_unit, messure_unit_select_options %>
  </div>

  <div>
    <%= form.label :space_between_plants, style: "display: block" %>
    <%= form.number_field :space_between_plants %>
  </div>

  <div>
    <%= form.label :space_between_plants_unit, style: "display: block" %>
    <%= form.select :space_between_plants_unit, messure_unit_select_options %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
