<%
  contact_select_options = BusinessContact.where(kind: :provider).map { |contact| [contact.name, contact.id] }
  messure_unit_select_options = [['Centimetros', :cm], ['Metros', :m]]
%>
<%= form_with(model: productive_property) do |form| %>
  <%= ApplicationHelper.model_error_alert(productive_property.errors) %>

  <div class="mt-3">
    <%= form.label :contato_comercial, class: 'form-label' %>
    <%= form.select :business_contact_id, contact_select_options, {}, class: 'form-select' %>
  </end>

  <div class="mt-3">
    <%= form.label :nome, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

 
  <div class="row">
    <div class="mt-3 col-md-2">
      <%= form.label 'Área (em m²)', class: 'form-label' %>
      <%= form.number_field :area, class: 'form-control'  %>
    </div>

    <div class="mt-3 col-md-2">
      <%= form.label :espaco_entre_colunas, class: 'form-label' %>
      <%= form.number_field :space_between_rows, class: 'form-control' %>
    </div>

    <div class="mt-3 col-md-2">
      <%= form.label :un, class: 'form-label' %>
      <%= form.select :space_between_rows_unit, messure_unit_select_options, {}, class: 'form-select' %>
    </div>

    <div class="mt-3 col-md-2">
      <%= form.label :espaco_entre_plantas, class: 'form-label' %>
      <%= form.number_field :space_between_plants, class: 'form-control' %>
    </div>

    <div class="mt-3 col-md-2">
      <%= form.label :un, class: 'form-label' %>
      <%= form.select :space_between_plants_unit, messure_unit_select_options, {}, class: 'form-select' %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= form.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>
