<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Exibir</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to "Contato", @productive_property.business_contact, class: 'btn btn-sm btn-outline-secondary' %>
      <%= link_to "Editar", edit_productive_property_path(@productive_property), class: 'btn btn-sm btn-outline-secondary' %>
    </div>
    <%= button_to "Excluir", @productive_property, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
  </div>
</div>

<%= render @productive_property %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h5 class="h5">Especies de Planta</h5>
</div>

<table id="plant_species" class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nome da Planta</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <% @productive_property.plant_species.each do |plant_specy| %>
      <tr>
        <td scope="row"><%= plant_specy.name %></td>
        <td>
          <%= link_to "Exibir", plant_specy %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
