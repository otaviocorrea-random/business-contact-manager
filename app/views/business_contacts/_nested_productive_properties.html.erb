<%
  @productive_properties = @business_contact.productive_properties
%>
<input type="hidden" id='business_contact_id' value="<%= @business_contact.id %>" />
<input type="hidden" id='business_contact_max_properties' value="<%= @business_contact.max_productive_properties %>" />

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h5">Propridades produtivas</h1>
  <%= link_to "Adicionar", '#', class: 'btn btn-sm btn-outline-secondary', id: 'add_new_nested_property_btn' %>
</div>

<table id="nested_productive_properties" class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Area</th>
      <th scope="col">Espaço colunas</th>
      <th scope="col">Espaço plantas</th>
      <th scope="col">Nº de Plantas</th>
      <th scope="col">Especies</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <!-- This data is generated by javascript -->
  </tbody>
</table>

<%= javascript_include_tag 'business_contact_nested_properties' %>