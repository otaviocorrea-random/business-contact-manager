<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Gerenciar</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Adicionar", new_plant_specy_path, class: 'btn btn-sm btn-outline-secondary' %>
  </div>
</div>

<table id="plant_species" class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nome da Planta</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <% @plant_species.each do |plant_specy| %>
      <tr>
        <td scope="row"><%= plant_specy.name %></td>
        <td>
          <%= link_to "Exibir", plant_specy %> | 
          <%= link_to "Editar", edit_plant_specy_path(plant_specy) %> | 
          <%= link_to "Excluir", plant_specy, method: :delete, data: { confirm: "VocÃª tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
